@model IEnumerable<PointSystem.Models.Feast>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Feasts</h1>

<p>
    @if (ViewContext.HttpContext.User.IsInRole("admin"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RediarectUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.RediarectUrl)
            </th>
            <td>
                <!--<a asp-action="Edit" asp-route-id="@item.id">Edit</a> |-->
                <a asp-action="Details" asp-route-id="@item.id">Details</a>
                @if (ViewContext.HttpContext.User.IsInRole("admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.id"> | Delete</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="~/RegistrationFeasts/Create?id=@item.id">| Subscribe</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
