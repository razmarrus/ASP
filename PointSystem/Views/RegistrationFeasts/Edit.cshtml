@model PointSystem.Models.RegistrationFeast

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Editing registration on Feast</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" value="processing" name="Status" />
            <input type="hidden" asp-for="AspNetUserId" />
            <input type="hidden" asp-for="FeastId" />
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Starting time</label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">Ending time</label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <select name="Content">
                    <option value="Concert">Concert</option>
                    <option value="Academic music">Academic music</option>
                    <option value="Flashmob">Flashmob</option>
                    <option value="Theatrical performance">Theatrical performance</option>
                    <option value="Living statues">Living statues</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Point" class="control-label"></label>
                <input asp-for="Point" class="form-control" />
                <span asp-validation-for="Point" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

