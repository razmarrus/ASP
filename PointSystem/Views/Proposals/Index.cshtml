@model IEnumerable<PointSystem.Models.Proposal>

@{
    ViewData["Title"] = "Index";
}

<h1>List of proposals</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create">Create New </a>
        <a asp-action="Status">| Check status</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Point)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPeople)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUser.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Point)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPeople)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.id">Details</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Delete" asp-route-id="@item.id"> | Delete |</a>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> 
}
                @if (ViewContext.HttpContext.User.IsInRole("admin"))
                {
                    <a asp-action="Consider" asp-route-id="@item.id"> | Consider</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
